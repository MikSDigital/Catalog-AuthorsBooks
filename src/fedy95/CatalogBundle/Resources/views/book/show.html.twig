{% extends '@fedy95Catalog/base.html.twig' %}

{% block body %}
    <h3><strong>{{ book.title }}</strong></h3>
    <br>
    <br>
    <a href="{{ path('book_edit', { 'id': book.id }) }}" class="btn btn-warning">Изменить</a>
    <a href="{{ path('book_delete', { 'id': book.id }) }}" class="btn btn-danger">Удалить</a>
    <br>
    <br>
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Название</th>
                <th>Авторы</th>
                <th>Количество страниц</th>
                <th>Год публикации</th>
                <th>ISBN</th>
                <th>Файл</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ book.title }}</td>
                    <td> {% for books in book.authors %} <li>{{ books }} </li> {% endfor %} </td>
                    <td>{{ book.pageNumber }}</td>
                    <td>{{ book.yearPublication }}</td>
                    <td>{{ book.ISBN }}</td>
                    {# файл #}
                    <td><a href="{{ asset('uploads/books/' ~ book.fileName)}}">PDF</a></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="bs-example" data-example-id="striped-table">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Имя файла</th>
            <th>Имя изображения</th>
        </tr>
        </thead>
        <tbody>
            <td>{{ book.fileName }}</td>
            <td>{{ book.imageName }}</td>
        </tr>
        </tbody>
    </table>
    </div>
    <br>
    {# обложка #}
    <img src="{{ asset('uploads/images/' ~ book.imageName)}}" class="center-block">
{% endblock %}

